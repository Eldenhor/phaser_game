{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "typeRoots": [
      "./typings",
      "./node_modules/"
    ],
    "resolveJsonModule": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src/**/*.ts",
    "typings/**/*.d.ts"
  ]
}